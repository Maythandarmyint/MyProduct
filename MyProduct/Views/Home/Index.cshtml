@using MyProduct.Models
@model List<Product>

@{
    ViewBag.Title = "Product List";
}
<h2>Product List</h2>
<table class="table">
    <tr>
        <th>
            Category
        </th>
        <th>
            Sub Category
        </th>
        <th>
            Product Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubCategory.Category1.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubCategory.SubcategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
    </tr>
    }
</table>
